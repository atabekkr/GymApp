<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GymApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="cardCategory"  >
        <item name="android:layout_width" >70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="textCardCategory" >

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dimen_height_text_card</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/montserat_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>

    </style>
</resources>